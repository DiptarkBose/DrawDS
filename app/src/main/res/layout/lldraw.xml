<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/node_decrement"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Nodes --" />

    <Button
    android:id="@+id/node_increment"
    android:layout_toRightOf="@id/node_decrement"
    android:layout_marginLeft="10dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:text="Nodes ++" />

    <Button
        android:id="@+id/ll_animate"
        android:layout_toRightOf="@id/node_increment"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Show Linked List Traversal" />

    <Button
        android:id="@+id/pick_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_animate"
        android:layout_marginLeft="10dp"
        android:text="Pick Color" />
</RelativeLayout>